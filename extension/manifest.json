{
  "manifest_version": 3,
  "name": "Detector de Exposición de Datos",
  "version": "1.0",
  "description": "Analiza páginas web y detecta posibles exposiciones de datos personales.",
  "permissions": ["activeTab", "scripting","notifications"],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/*",
        "https://www.roblox.com/*",
        "https://www.epicgames.com/*",
        "https://discord.com/*",
        "https://steamcommunity.com/"
        ],
      "js": ["content.js"]
    }
  ]
}
